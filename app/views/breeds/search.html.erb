<h2>Search for: <span class="light"><%= params[:keywords] %></span></h2>
<h3>Found: <span class="light"><%= pluralize(@breeds.count, 'Breeds') %></span></h3>

<%= paginate @breeds , window: 1 %>

<div class="row">
  <% @breeds.each do |breed| %>
    <div class="col-4">
      <img src="<%= breed.image %>" alt="<%= breed.name %> image" />
      <p><%= link_to breed.name, breed %></p>
      <p><%= link_to breed.pet_group.name, breed.pet_group %></p>
      <p><%= breed.price.round(2) %></p>
    </div>
  <% end %>
</div>

<%= paginate @breeds , window: 1 %>