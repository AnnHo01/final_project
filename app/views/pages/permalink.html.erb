<h2><%= @about.title %></h2>

<% @new_line = @about.content.split("/").map(&:strip)
  @new_line.each do |item| %>
      <p><%= item %></p>
<% end %>

<% if @about.image.present? %>
  <div class="card-image">
      <figure class="image">
        <%= image_tag @about.image %>
      </figure>
    </div>
  <% else %>
    <%= image_tag("final_project.png", :alt => "ERD demonstration") %>
  <% end %>