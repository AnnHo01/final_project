<h2>Aninmal: <span class="light"><%= @pet_group.name%></span></h2>

<div class="row">
  <% @pet_group.breeds.each do |breed| %>
    <div class="col-4">
      <img src="<%= breed.image %>" alt="<%= breed.name %> image" />
      <p><%= link_to breed.name, breed %></p>
      <p><%= breed.price.round(2) %></p>
    </div>
  <% end %>
</div>