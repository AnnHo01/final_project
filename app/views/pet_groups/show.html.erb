<h2>Aninmal: <span class="light"><%= @pet_group.name%></span></h2>

<% if @pet_group.breeds.count > 10 %>
  <%= paginate @pg_pag , window: 1 %>
<% end %>
  <div class="row">
    <% @pg_pag.each do |breed| %>
      <div class="col-4">
        <% if breed.image.present? %>
          <div class="card-image">
            <figure class="image">
              <%= image_tag breed.image %>
            </figure>
          </div>
        <% else %>
          <img src="<%= breed.image_URL %>" alt="<%= breed.name %> image" />
        <% end %>
        <p><%= link_to breed.name, breed %></p>
        <p><%= number_to_currency breed.price %></p>


        <%# if cart.include?(breed) %>
